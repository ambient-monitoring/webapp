<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel>
        <b:Panel hiddenOn="XS_SM" styleName="pageTitle">
            <g:HTMLPanel>
                <h1>ambient monitoring
                    <small>for your home</small>
                </h1>
            </g:HTMLPanel>
        </b:Panel>

        <b:Navbar>
            <b:NavbarHeader>
                <b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
            </b:NavbarHeader>

            <b:NavbarCollapse b:id="navbar-collapse">
                <b:NavbarNav>
                    <b:AnchorListItem text="Overview" targetHistoryToken="overview"/>
                    <b:AnchorListItem text="Indoor" targetHistoryToken="indoor"/>
                    <b:AnchorListItem text="Outdoor" targetHistoryToken="outdoor"/>
                </b:NavbarNav>
            </b:NavbarCollapse>
        </b:Navbar>
    </g:HTMLPanel>

</ui:UiBinder>