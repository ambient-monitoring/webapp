<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
        >

    <b:Panel type="DEFAULT" ui:field="panel">
        <b:PanelHeader>
            <b:Heading size="H3" ui:field="fieldTitle"/>
        </b:PanelHeader>

        <b:PanelBody>
            <b:Container fluid="true">
                <b:Row>
                    <b:Column size="XS_6,SM_6,MD_6,LG_6">
                        <b.html:Paragraph text="Temperature:"/>
                    </b:Column>
                    <b:Column size="XS_6,SM_6,MD_6,LG_6">
                        <b:Label ui:field="fieldTemp" type="PRIMARY"/>
                    </b:Column>
                </b:Row>

                <b:Row>
                    <b:Column size="XS_6,SM_6,MD_6,LG_6">
                        <b.html:Paragraph text="Humidity:"/>
                    </b:Column>
                    <b:Column size="XS_6,SM_6,MD_6,LG_6">
                        <b:Label ui:field="fieldHum" type="PRIMARY"/>
                    </b:Column>
                </b:Row>

                <b:Row>
                    <b:Column size="XS_6,SM_6,MD_6,LG_6">
                        <b.html:Paragraph text="Voltage:"/>
                    </b:Column>
                    <b:Column size="XS_6,SM_6,MD_6,LG_6">
                        <b:Label ui:field="fieldVcc" type="PRIMARY"/>
                    </b:Column>
                </b:Row>
            </b:Container>
        </b:PanelBody>

        <b:PanelFooter>
            <b.html:Strong ui:field="fieldUpdated"/>
        </b:PanelFooter>
    </b:Panel>

</ui:UiBinder>