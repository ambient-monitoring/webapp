<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
        >

    <b:Panel type="DEFAULT">
        <b:PanelHeader>
            <b:Heading size="H3" ui:field="fieldTitle"/>
        </b:PanelHeader>

        <b:PanelBody>
            <g:HorizontalPanel>
                <b:Label text="Temperature:"/>
                <b:Label ui:field="fieldTemp" type="PRIMARY"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel>
                <b:Label text="Humidity:"/>
                <b:Label ui:field="fieldHum" type="PRIMARY"/>
            </g:HorizontalPanel>
        </b:PanelBody>

        <b:PanelFooter>
            <b.html:Strong ui:field="fieldUpdated"/>
        </b:PanelFooter>
    </b:Panel>

</ui:UiBinder>